<h1>管理后台</h1>
<div class="container">
  <form action="<%=search_admin_users_path %>" method="get">
    用户名: <input type="text" name="user_name" value="<%= params[:user_name] %>">
    <input type="submit" name="提交"/>
  </form>

  <table class="table table-bordered table-hover">
    <thead>
    <tr>
      <th width="15%">id</th>
      <th width="20%">name</th>
      <th width="10%">操作</th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |r| %>
      <tr>
        <td><%= r.id %></td>
        <td><%= r.user_name %></td>
        <td>
          <div class="nowrap">
            <%= link_to '修改', '' %>
          </div>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <%= will_paginate @users %>
</div>
