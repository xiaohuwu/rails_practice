<h1>用户登录</h1>

<div class="row">
  <div class="col-sm-5">
    <%= form_for @user,url: sessions_path,method: 'POST'  do |f|%>

      <div class="form-group">
        <ul>
          <% @user.errors.messages.values.flatten.each do |error| %>
            <li><%= error  %></li>
          <% end %>
        </ul>
      </div>


      <div class="form-group">
        <label for="name">用户名称</label>
        <%= f.text_field  :user_name,class:"form-control",placeholder:"请输入名称" %>
      </div>

      <div class="form-group">
        <label for="name">密码</label>
        <%= f.password_field  :password,class:"form-control",placeholder:"请输入名称" %>
      </div>
      <button type="submit" class="btn btn-default">提交</button>
   <% end %>
  </div>
</div>
