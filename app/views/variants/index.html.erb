<div class="page-header">
  <h1><%=t '.title', :default => Variant.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= Variant.human_attribute_name(:price) %></th>
      <th><%= Variant.human_attribute_name(:size) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%= render @variants %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")), new_product_variant_path(@product), :class => 'btn btn-primary' %>
